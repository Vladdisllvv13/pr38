ScreensManager:
    name: "screensmanager"
    MainScreen:
    CameraScreen:


<MainScreen>:
    name: "Main screen"
    FloatLayout:
        Image:
            id: image
            size_hint: self.texture_size
            pos_hint:{"center_x": .5, "center_y": .75}
        Label:
            id: info
            pos_hint: {"center_x": .5, "center_y": .75}
            size_hint: .9, .3
            size_hint: 1, .8
        Button:
            text: "Показать статистику"
            pos_hint: {"center_x": .5, "center_y": .45}
            size_hint: .9, .2
            on_press: root.show_info()
        Button:
            text: "Открыть камеру"
            pos_hint: {"center_x": .5, "center_y": .15}
            size_hint: .9, .2
            on_release: app.root.current = "Camera"


<CameraScreen>:
    name: "Camera"

    FloatLayout:
        Camera:
            id: camera
            resolution: (800,800)
            pos_hint: {"center_x": .5, "center_y": .5}
            size_hint: .7, .7
            play: True
        Button:
            text: "Меню"
            pos_hint: {"center_x": .5, "center_y": .95}
            size_hint: .8, .1
            on_press: app.root.current = "Main screen"
        Button:
            text: "Снимок"
            pos_hint: {"center_x": .5, "center_y": .05}
            size_hint: .8, .1
            on_press: root.screen_shot()